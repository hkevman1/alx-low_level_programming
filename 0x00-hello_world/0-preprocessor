#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
  echo "Please set the CFILE variable to the name of the C file you want to preprocess."
  exit 1
fi

# Preprocess the C file and save the output to 'c' file
gcc -E "$CFILE" -o c

echo "Preprocessing completed and saved in 'c' file."

